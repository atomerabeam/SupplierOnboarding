								<VBox id="idSpaceP3S23.VBox" height="12px"/>
								<Label id="idCountryP3.Label" class="customLabel" text="{i18n>country}"/>
								<Input id="idCountryP3.Input"  editable="false" value="{SupplierInfo>/supplier/country}"/>
