                                <!-- @ui5ignore-patterns -->
								<Text id="idReview2.Text" text="{i18n>reviewDetails}" class="customText"/>
                            </VBox>
                            <VBox id="idSpaceP3S2.VBox" width="24px"/>
                            <VBox id="idCorporationInput.VBox" width="70%">
								<Label id="idSupplierIDP3.Label" class="customLabel" text="{i18n>supplierID}"/>
								<Input id="idSupplierIDP3.Input" editable="false" value="{SupplierInfo>/supplier/supplierID}"/>
								<VBox id="idSpaceP3S21.VBox" height="12px"/>
								<Label id="idLegalEntityNameP3.Label" class="customLabel" text="{i18n>legalName}"/>
                                <!-- @ui5ignore-patterns -->
								<Input id="idLegalEntityNameP3.Input" editable="false" 
