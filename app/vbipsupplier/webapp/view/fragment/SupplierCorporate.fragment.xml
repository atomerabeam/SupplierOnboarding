								<VBox id="idSpaceP3S28.VBox" height="12px"/>
								<Label id="idBusinessNature.Label" text="{i18n>businessNature}"/>
                                <Select id="idBusinessNature.Select" items="{path: 'F4>/businessNature'}">
                                    <core:Item id="idBusinessNature.Item" key="{F4>selectKey}" text="{F4>businessNature}"/>
                                </Select>
                                <Label id="idShareholderCount.Label" text="{i18n>shareholderCount}"/>
                                <HBox id="idShareholderCount.HBox">
                                    <!-- @ui5ignore-patterns -->
                                    <Select id="idShareHolderCount.Select" forceSelection="true" class="sapUiSmallMarginEnd"
                                            change="onChangeShareCount" selectedKey="{F4>/shareholder/count}">
                                        <core:Item id="idCount1.Item" key="1" text="1"/>
                                        <core:Item id="idCount2.Item" key="2" text="2"/>
                                        <core:Item id="idCount3.Item" key="3" text="3"/>
                                        <core:Item id="idCount4.Item" key="4" text="4"/>
                                        <core:Item id="idCount5.Item" key="5" text="5"/>
                                        <core:Item id="idCount6.Item" key="6" text="6"/>
                                        <core:Item id="idCount7.Item" key="7" text="7"/>
                                        <core:Item id="idCount8.Item" key="8" text="8"/>
                                        <core:Item id="idCount9.Item" key="9" text="9"/>
                                        <core:Item id="idCount10.Item" key="10" text="10"/>
                                    </Select>
