                                        </core:Icon>
                                    </VBox>
                                    <VBox class="classUploadItem">
                                        <Text class="classTextBold" text="Click to upload or drag and drop"/>
                                        <Text text="PNG, PDF, JPG or GIF"/>
                                    </VBox>
                                    <VBox class="classUploadItem">
                                        <!-- @ui5ignore-patterns -->
                                        <Button id="idUploadFile1.Button" type="Transparent" 
                                                text="Select file" press="onUploadFileButton"></Button>
                                    </VBox>
                                </HBox>

                                <HBox class="classFileNameBox" width="75%" visible="{FileModel>/file1/fileVisible}">
