                        </HBox>
						<HBox id="idSpaceP3S3.HBox" height="40px"/>

                        <HBox id="idStep1.HBox" width="100%">
                            <!-- @ui5ignore-patterns -->
                            <Button id="idStep1.Button" text="{i18n>continue}" class="sapUiSmallMarginEnd" 
                                    type="Emphasized" press="onContinueStep1"/>
                            <!-- @ui5ignore-patterns -->
                            <Button id="idSaveAndExit.Button" text="{i18n>saveAndExit}" class="sapUiSmallMarginEnd" 
                                    type="Transparent" press="onSaveAndExit"/>
                            <Label id="idLastAutosaved.Label" text="{i18n>lastAutoSaved}" class="sapUiTinyMarginTop"/>
