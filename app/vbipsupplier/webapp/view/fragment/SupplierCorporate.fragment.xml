								<Text id="idReview1.Text" text="{i18n>reviewDetails}" class="customText"/>
                            </VBox>

                            <VBox id="idSpaceP3S1.VBox" width="24px"/>
                            
                            <VBox id="idBankInput.VBox" width="70%">
								<Label id="idAccountNumberP3.Label" class="customLabel" text="{i18n>accountNumber}"/>
								<Input id="idAccountNumberP3.Input"  editable="false" value="{SupplierInfo>/supplier/accountNumber}"/>
								<VBox id="idSpaceP3S11.VBox" height="12px"/>
