
<core:FragmentDefinition 
	xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <VBox id="idMainPage2.VBox" class="sapUiSmallMargin" alignItems="Center" visible="{PageModel>/pageFlow/infoConfirm}">
		<VBox id="idContentPage2.VBox" class="customBoxContent" width="65%">
			<!-- @ui5ignore-patterns -->
			<Text id="idGetStarted.Text" text="{i18n>getStarted}" class="mainTitle"/>
			<!-- @ui5ignore-patterns -->
			<Text id="idConfirmFollowing.Text" text="{i18n>confirmFollowing}" class="customText"/>
			<VBox id="idSpaceP2S1.VBox" height="32px"/>

			<Label id="idSupplierIDP2.Label" class="customLabel" text="{i18n>supplierID}"></Label>
			<Input id="idSupplierIDP2.Input" editable="false" value="SUPA123"/>
			<VBox id="idSpaceP2S2.VBox" height="12px"/>
			<Label id="idLegalEntityNameP2.Label" class="customLabel" text="{i18n>legalName}"></Label>
			<Input id="idLegalP2.Input" editable="false" value="Company Supplier"/>
			<VBox id="idSpaceP2S3.VBox" height="12px"/>
			<Label id="idCountryP2.Label" class="customLabel" text="{i18n>country}"></Label>
			<Input id="idCountryP2.Input"  editable="false" value="Singapore"/>
			<VBox id="idSpaceP2S4.VBox" height="12px"/>
			<Label id="idCityP2.Label" class="customLabel" text="{i18n>city}"></Label>
			<Input id="idCityP2.Input"  editable="false" value="Singapore"/>
			<VBox id="idSpaceP2S5.VBox" height="12px"/>
			<Label id="idStateP2.Label" class="customLabel" text="{i18n>state}"></Label>
			<Input id="idStateP2.Input"  editable="false" value="Singapore"/>
			<VBox id="idSpaceP2S6.VBox" height="12px"/>
			<Label id="idCompanyAddressP2.Label" class="customLabel" text="{i18n>companyAddress}"></Label>
			<Input id="idCompanyAddressP2.Input"  editable="false" value="123 Orchard Road"/>
			<VBox id="idSpaceP2S7.VBox" height="12px"/>
			<Label id="idPostalCodeP2.Label" class="customLabel" text="{i18n>postalCode}"></Label>
			<Input id="idPostalCodeP2.Input"  editable="false" value="546080"/>
			<VBox id="idSpaceP2S8.VBox" height="12px"/>
			<Label id="idAccountNumberP2.Label" class="customLabel" text="{i18n>accountNumber}"></Label>
			<Input id="idAccountNumberP2.Input"  editable="false" value="FDNB 0000 1235 1221"/>
			<VBox id="idSpaceP2S9.VBox" height="12px"/>
			<Label id="idBankCodeP2.Label" class="customLabel" text="{i18n>bankCode}"></Label>
			<Input id="idBankCodeP2.Input"  editable="false" value="ABC12345"/>
			<VBox id="idSpaceP2S10.VBox" height="12px"/>
			<Label id="idBusinessRegNumP2.Label" class="customLabel" text="{i18n>businessRegNum}"></Label>
			<Input id="idBusinessRegNumP2.Input" class="customInputSolid" editable="false" value="Singapore"/>
			<VBox id="idSpaceP2S11.VBox" height="32px"/>

			<HBox id="idButtonP2.HBox">
				<!-- @ui5ignore-patterns -->
				<Button id="idConfirmInfo.Button" class="classButtonRow" type="Emphasized" 
						text="{i18n>confirmInfo}" press="onConfirmInfo"/>
				<!-- @ui5ignore-patterns -->
				<Button id="idReportInfo.Button" class="classButtonRow" type="Transparent" 
						text="{i18n>reportInfo}" press="onReportInfo"/>
				<VBox id="idSpaceP2S12.VBox" width="50%"/>
				<VBox id="idImage.VBox" class="sapUiSmallMarginEnd">
					<Image src="/vbipsupplier/webapp/images/Global.png" width="200px" />

				</VBox>
			</HBox>
		</VBox>
    </VBox>
</core:FragmentDefinition>
