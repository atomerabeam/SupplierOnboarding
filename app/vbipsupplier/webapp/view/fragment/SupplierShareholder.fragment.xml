<core:FragmentDefinition 
	xmlns="sap.m"
    xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form">
    <VBox id="idMainPage4.VBox" class="sapUiSmallMargin" alignItems="Center" visible="{PageModel>/pageFlow/shareholder}">
		<VBox id="idContentPage4.VBox" class="customBoxContent" width="65%">
			<form:SimpleForm editable="true" singleContainerFullSize="false">
                <form:content>
                    <VBox class="sapUiSmallMargin">
                        <HBox class="classCustomHeight">
                            <VBox width="15%">
                                <Text text="{i18n>shareholderInfo}" class="customSubtitle1"/>
                                <Text text="{i18n>shareholderContent}" class="customText"/>
                            </VBox>
                            <VBox width="85%" items="">
                                <items>
                                    <Panel expandable="true" width="auto" class="classShareHolderBorder sapUiResponsiveMargin">
                                        <headerToolbar>
                                            <OverflowToolbar>
                                                <Text text="{i18n>shareholder}"/>
                                                <ToolbarSpacer/>
                                                <Button type="Emphasized" text="{i18n>enterInformation}" press="fnOpenShareHolderPopup"/>
                                            </OverflowToolbar>

                                        </headerToolbar>
                                        <content>
                                            <HBox>
                                                <VBox width="50%">
                                                    <Text text="{i18n>shareholderDetails}"/>
                                                    <Label text="{i18n>name}"></Label>
                                                    <Input value="{oModelData>shareHolderProof/name}"/>
                                                    <Label text="{i18n>sharePercentage}"></Label>
                                                    <Input value="{oModelData>/shareHolderProof/sharePercentage}"/>

                                                    <Text text="{i18n>identityProof}"/>
                                                    <Label text="{i18n>documentType}"></Label>
                                                    <Select selectedKey="{oModelData>/shareHolderProof/identityProof/documentType}"/>
                                                    <Label text="{i18n>documentName}"></Label>
                                                    <Input value="{oModelData>/shareHolderProof/identityProof/documentName}"/>
                                                    <Label text="{i18n>documentNumber}"></Label>
                                                    <Input value="{oModelData>/shareHolderProof/identityProof/documentNumber}"/>
                                                    <Label text="{i18n>dateOfIssue}"></Label>
                                                    <Input value=""/>
                                                    <Label text="{i18n>documentUploaded}"></Label>
                                                    <Input value=""/>
                                                </VBox>
                                                
                                                <VBox alignItems="End" width="50%">
                                                    <Button type="Transparent" text="{i18n>editInformation}"></Button>
                                                </VBox>
                                            </HBox>
                                        </content>
                                    </Panel>
                                </items>
                            </VBox>
                        </HBox>
                        <HBox width="100%">
                            <!-- <Button text="{i18n>previousStep}" class="sapUiSmallMarginEnd" type="Emphasized" press="onNavigateTOPreviousStep"/> -->
                            <!-- @ui5ignore-patterns -->
                            <Button text="{i18n>continue}" class="sapUiSmallMarginEnd" type="Emphasized" press="onContinueStep2"/>
                            <Label text="{i18n>lastAutoSaved}" class="sapUiTinyMarginTop"/>
                        </HBox>
                    </VBox>
                </form:content>
            </form:SimpleForm>
		</VBox>
    </VBox>
</core:FragmentDefinition>
